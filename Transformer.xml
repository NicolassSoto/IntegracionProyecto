<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" version="1.0">
    <xsl:output method="text" />

    <!-- Plantilla raíz que se aplica al nodo raíz del XML -->
    <xsl:template match="/drink">
        SELECT stock FROM BEBIDA WHERE nombre = '<xsl:value-of select="name" />';
    </xsl:template>
</xsl:stylesheet>